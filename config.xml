<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bsdmasterindex.pg-botdrive"
        version     = "1.0"
        versionCode = "10" >
        <!-- versionCode is optional and Android only -->
        <preference name="phonegap-version" value="3.5.0" />

        <name>Phonegap Botdrive</name>
        <description>A Simple Phonegap App to drive a robot with the help of an accelerometer.</description>
        <author href="http://bsdmasterindex.com" email="jessemonroy650@yahoo.com">
        Jesse Monroy
        </author>
        <gap:platform name="android" />
		<gap:platform name="ios" />

        <preference name="permissions" value="none"/>
		<!-- device information/phone model, uuid, etc -->
		<gap:plugin name="org.apache.cordova.device" />
		<!-- Accelerometer -->
        <gap:plugin name="org.apache.cordova.device-motion" />
		<!-- Compass, not always accurate -->
		<gap:plugin name="org.apache.cordova.device-orientation" />
    </widget>
